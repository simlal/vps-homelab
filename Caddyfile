{
	# ACME account email for certificate notices
	email {env.CADDY_EMAIL}
	admin :2019
}

:80 {
	@health {
		path /health
	}
	respond @health "OK" 200
	redir https://simlal.dev{uri}
}

www.simlal.dev {
	redir https://simlal.dev{uri} permanent
}

simlal.dev {
	respond "Hello, world!"
}

# Observability
kuma.simlal.dev {
	reverse_proxy kuma:3001
}

# Healthcheck
healthcheck.simlal.dev {
	root * /serv/healthcheck
	file_server
}
